# MongoDB Atlas Connection String
# Note: If password contains special characters like comma, use %2C instead
MONGODB_URI=mongodb+srv://USER:PASSWORD@cluster0.xxx.mongodb.net/project_upload?appName=Cluster0

# JWT Secret - Change this in production!
JWT_SECRET=your_jwt_secret_key_change_in_production

# Email service (Brevo/Sendinblue)
BREVO_API_KEY=your_brevo_api_key
EMAIL_FROM_ADDRESS=noreply@yourdomain.com
EMAIL_FROM_NAME=Project Gallery

# SMTP Settings (Alternative to Brevo API)
SMTP_HOST=smtp-relay.brevo.com
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_password
SMTP_FROM=Project Gallery <noreply@yourdomain.com>

# SMS service (Twilio) - Optional, for phone number signup
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Google OAuth - Optional
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# URLs
# For local development:
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:4000

# For production, update with your deployed URLs:
# FRONTEND_URL=https://your-frontend-url.com
# BACKEND_URL=https://your-backend-url.com

# Cloudinary - for image uploads
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret
